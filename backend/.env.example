# BrightThread Order Support Agent - Environment Configuration
# Copy this file to .env and fill in actual values

# ============================================================================
# API Configuration
# ============================================================================

# API environment (development, staging, production)
ENVIRONMENT=development

# API log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ============================================================================
# Database Configuration
# ============================================================================

# PostgreSQL database connection
DB_HOST=localhost
DB_PORT=5432
DB_NAME=brightthread
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# Connection pool settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# ============================================================================
# AWS Configuration
# ============================================================================

# AWS region for all AWS services
AWS_REGION=us-west-2

# AWS account ID (for ARN construction)
AWS_ACCOUNT_ID=233569452394

# RDS database endpoint (when deployed to AWS)
RDS_ENDPOINT=brightthread.c123456.us-west-2.rds.amazonaws.com

# DynamoDB table for order cache (optional)
DYNAMODB_TABLE_ORDERS=brightthread-orders

# S3 bucket for artwork storage
S3_BUCKET_ARTWORK=brightthread-artwork

# SQS queue for async operations
SQS_QUEUE_URL=https://sqs.us-west-2.amazonaws.com/233569452394/brightthread-orders

# ============================================================================
# Lambda Configuration (for AWS Lambda deployment)
# ============================================================================

# Lambda function name
LAMBDA_FUNCTION_NAME=brightthread-order-support-api

# Lambda memory allocation (128-10240 MB)
LAMBDA_MEMORY=512

# Lambda timeout (seconds)
LAMBDA_TIMEOUT=60

# ============================================================================
# Authentication & Authorization
# ============================================================================

# JWT token secret (generate with: openssl rand -hex 32)
JWT_SECRET_KEY=your_jwt_secret_key_here

# JWT token expiration (seconds)
JWT_EXPIRATION=3600

# API key for service-to-service auth (optional)
API_KEY=your_api_key_here

# ============================================================================
# Feature Flags
# ============================================================================

# Enable AI/LLM-based agent (when implemented)
ENABLE_AI_AGENT=false

# Enable webhook notifications
ENABLE_WEBHOOKS=false

# Enable async order processing
ENABLE_ASYNC_PROCESSING=true

# ============================================================================
# External Services
# ============================================================================

# Anthropic API key (for LLM-based agent)
ANTHROPIC_API_KEY=your_anthropic_key_here

# Webhook URL for order updates (customer notifications)
WEBHOOK_URL_CUSTOMER=https://example.com/webhook/order-updates

# Webhook URL for operations alerts
WEBHOOK_URL_OPERATIONS=https://example.com/webhook/operations-alerts

# ============================================================================
# Monitoring & Observability
# ============================================================================

# CloudWatch log group
CLOUDWATCH_LOG_GROUP=/aws/lambda/brightthread-order-support

# Enable detailed request logging
ENABLE_REQUEST_LOGGING=true

# Enable performance monitoring
ENABLE_PERFORMANCE_MONITORING=true

# ============================================================================
# Policy Configuration
# ============================================================================

# Default policy for quantity increases (surcharge percentage)
QUANTITY_INCREASE_SURCHARGE_PCT=5

# Default timeline for expedited changes (days)
EXPEDITED_CHANGE_DELAY_DAYS=2

# Maximum days allowed for order modification
MAX_MODIFICATION_DAYS_AFTER_CREATION=30
