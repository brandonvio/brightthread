BLUE := \033[0;34m
GREEN := \033[0;32m
YELLOW := \033[1;33m
NC := \033[0m # No Color

dev: ## Run development server
	@echo "$(BLUE)==> Starting development server...$(NC)"
	npm run dev

build:
	@echo "$(BLUE)==> Building project...$(NC)"
	npm run build

lint:
	@echo "$(BLUE)==> Linting project...$(NC)"
	npm run lint

format:
	@echo "$(BLUE)==> Formatting project...$(NC)"
	npm run format